<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fav_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    android:background="@color/white"
    app:cardCornerRadius="16dp"
    android:elevation="4dp"
    app:cardBackgroundColor="@color/backgroundTwo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/favourite_meal_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription=""
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/RoundedImageView" />

        <TextView
            android:id="@+id/favourite_meal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@id/favourite_meal_image"
            android:text="Meal Name"
            android:textColor="@color/darkToty"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/removeFavbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/favourite_meal_image"
            android:src="@drawable/baseline_delete_24" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
